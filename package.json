    "js-yaml": "^4.1.0",
    "js-yaml-loader": "^1.2.2",
    "mini-css-extract-plugin": "^2.9.2",
    "node-sass-glob-importer": "^5.3.3",
    "normalize.css": "^8.0.1",
    "open-cli": "^8.0.0",
    "pa11y": "^8.0.0",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "postcss-scss": "^4.0.9",
    "ramda": "^0.30.1",
